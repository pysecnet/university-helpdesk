.chatContainer {
  background-color: var(--primaryLight-color);
  width: 50%;
  max-width: 600px;
  height: 80vh;
  margin: auto;
  padding: 20px;
  border-radius: 20px 20px 0 0;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  scroll-behavior: smooth;
}

.robocontainer {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 10px;
}

.humancontainer {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10px;
}

.robosection {
  display: flex;
  align-items: flex-start;
  gap: 10px;
}

.robopara {
  background-color: var(--secondary-color);
  padding: 12px 16px;
  border-radius: 12px;
  max-width: 75%;
  word-wrap: break-word;
  font-size: 14px;
}

.userpara {
  background-color: var(--text-color1);
  color: var(--primary-color);
  padding: 12px 16px;
  border-radius: 12px;
  max-width: 75%;
  word-wrap: break-word;
  font-size: 14px;
}

.roboicon {
  font-size: 20px;
  margin-top: 4px;
}

.date {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.5);
  padding-top: 4px;
  text-align: right;
}

.messagecontainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 50%;
  max-width: 600px;
  margin: auto;
  padding: 12px;
  background-color: var(--primaryLight-color);
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 0 0 12px 12px;
}

.input {
  width: 85%;
  padding: 10px;
  border-radius: 8px;
  border: none;
}

.btn {
  padding: 8px 16px;
  border-radius: 8px;
  border: none;
  background-color: var(--text-color1);
  cursor: pointer;
}

.sendicon {
  font-size: 20px;
  color: var(--primary-color);
}
